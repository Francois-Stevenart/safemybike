<div class="search-page-container">
  <div
    id="map"
    class="index-map"
    style="width: 100%;
    height: 100%;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  >
    <div id="search-filter" class="left-sidebar-map">
      <h3>Filters</h3>
      <div class="search-garage-features">
        <% @features.each do |feature| %>
          <div class="search-garage-feature">
            <div class="inputGroup">
              <input type="checkbox" class="checkbox" id="<%= feature.name %>" name="<%= feature.name %>" value="<%= feature.name %>">
              <label for="<%= feature.name %>"><%= render inline: feature.icon_image %> <%= feature.name.capitalize %></label>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="index-cards" id="garage-card-list">
    <% @garages.last(5).each do |garage| %>
      <%= render "map_card", garage: garage %>
    <% end %>
  </div>
</div>
