<div class="container">
  <div class="row">
    <div class="col-sn-6 col-sn-offset-3">
      <div class="chat-header"><h4>#<%= @chat_room.name %></h4></div>
      <div class="messages">
        <% @chat_room.chats.each do |message| %>
          <%= render "messages/message", message: message %>
        <% end %>
      </div>
      <div id="create-message">
        <%= simple_form_for [ @chat_room, Chat.new ], remote: true do |f| %>
          <%= f.input :content, label: false %>
        <% end %>
      </div>
    </div>
  </div>
</div>
