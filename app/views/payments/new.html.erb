<div class="form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 custom-form">

      <h2>Booking payment</h2>

        <div class="card-dashboard shadow payment-card">
          <%= link_to user_garage_path(@garage.user, @booking.garage), class: 'garage-card-link' do %>
            <div class="garage-card-image" style="background-image: url(<%= cl_image_path @garage.profile_image %>);">
            </div>
          <% end %>

          <div class="garage-card-info payment-form">
            <p class="larger-text">Garage owner: <strong><%= @garage.user.first_name  %> <%= @garage.user.last_name  %></strong> </p>
            <p><%= @garage.street_number  %> <%= @garage.street_address  %></p>

            <%= form_tag order_payments_path(@order) do %>
              <article>
                <label class="amount tag tag-item blue-tag payment-amount">
                  <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
                </label>
              </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-name="My Teddy"
            data-email="<%= current_user.email %>"
            data-description="  Booking "
            data-amount="<%= @order.amount_cents %>"
            data-currency="<%= @order.amount.currency %>"></script>
        <% end %>
            </div>
          </div>

    </div>
  </div>
</div>
